<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlideSupport">
        <attr name="slideMode" format="enum">
            <enum name="none" value="1"/>
            <enum name="leftToRight" value="2"/>
            <enum name="rightToLeft" value="4"/>
            <enum name="both" value="6"/>
        </attr>

        <attr name="slideStyle" format="enum">
            <enum name="moveItemOnly" value="1"/>
            <enum name="moveContentOnly" value="2"/>
            <enum name="moveWithContent" value="3"/>
            <enum name="scaleItem" value="4"/>
            <enum name="rotateItem" value="5"/>
            <enum name="alphaItem" value="6"/>
        </attr>

        <attr name="leftToRightSlideStyle" format="enum">
            <enum name="moveItemOnly" value="1"/>
            <enum name="moveContentOnly" value="2"/>
            <enum name="moveWithContent" value="3"/>
            <enum name="scaleItem" value="4"/>
            <enum name="rotateItem" value="5"/>
            <enum name="alphaItem" value="6"/>
        </attr>

        <attr name="rightToLeftSlideStyle" format="enum">
            <enum name="moveItemOnly" value="1"/>
            <enum name="moveContentOnly" value="2"/>
            <enum name="moveWithContent" value="3"/>
            <enum name="scaleItem" value="4"/>
            <enum name="rotateItem" value="5"/>
            <enum name="alphaItem" value="6"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SlideHandler">
        <attr name="leftViewId" format="reference"/>
        <attr name="rightViewId" format="reference"/>
        <attr name="contentViewId" format="reference"/>

        <attr name="slideDuration" format="integer"/>
        <attr name="slideInterpolator" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MoveSlideHandler">
        <attr name="slideMoveDistance" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ScaleSlideHandler">
        <attr name="fromScale" format="float"/>
        <attr name="toScale" format="float"/>
        <attr name="scaleDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RotateSlideHandler">
        <attr name="fromDegree" format="float"/>
        <attr name="toDegree" format="float"/>
        <attr name="rotateDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="AlphaSlideHandler">
        <attr name="fromAlpha" format="float"/>
        <attr name="toAlpha" format="float"/>
        <attr name="alphaDuration" format="integer"/>
    </declare-styleable>
</resources>