<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="ListView"
            android:onClick="onListViewSample"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="RecyclerView"
            android:onClick="onRecyclerViewSample"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="ExpandableListView"
            android:onClick="onExpandableListViewSample"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="ScrollView"
            android:onClick="onScrollViewSample"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="With SwipeRefreshLayout"
            android:onClick="onWithSwipeRefreshLayoutSample"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="With PullToRefresh Library"
            android:onClick="onWithPullToRefreshLibrarySample"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="Composite Slide-Action-Handler"
            android:onClick="onCompositeSlideActionHandler"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="Slide-Action-Handler Set &amp; Sequence"
            android:onClick="onSlideActionHandlerSet"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="Customized Slide-Action-Handler"
            android:onClick="onCustomizedSlideActionHandler"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textAllCaps="false"
            android:text="MoveContentOnly"
            android:onClick="onMoveContentOnlySample"/>
    </LinearLayout>
</ScrollView>
