<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.straw.samples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.base.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.listview.ListViewSampleActivity"/>
        <activity android:name=".activity.recyclerview.RecyclerViewSampleActivity"/>
        <activity android:name=".activity.recyclerview.MoveContentOnlySampleActivity"/>
        <activity android:name=".activity.scrollview.ScrollViewSampleActivity"/>
        <activity android:name=".activity.listview.ExpandableListViewSampleActivity"/>
        <activity android:name=".activity.swpierefresh.WithSwipeRefreshLayoutSampleActivity"/>
        <activity android:name=".activity.pulltorefresh.WithPullToRefreshLibrarySampleActivity"/>
        <activity android:name=".activity.customized.CompositeSlideActionSampleActivity"/>
        <activity android:name=".activity.customized.SlideActionSetSampleActivity"/>
        <activity android:name=".activity.customized.CustomizedSlideActionSampleActivity"/>

    </application>

</manifest>
